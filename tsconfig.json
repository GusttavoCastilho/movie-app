{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@theme": ["src/theme"],
      "@types": ["src/types"],
      "@utils": ["src/utils"],
      "@hooks": ["src/hooks"],
      "@store": ["src/store"],
      "@assets": ["src/assets"],
      "@styles": ["src/styles"],
    }
  }
}
